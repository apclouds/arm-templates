{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverName": {
      "type": "string",
      "defaultValue": "ap-server"
    },
    "adminLogin": {
      "type": "string",
      "defaultValue": "ap-login"
    },
    "adminPassword": {
      "type": "string",
      "defaultValue": "woeinfwprgerv34f"
    },
    "hostingPlan": {
      "type": "string",
      "defaultValue": "ap-hostingPlan"
    },
    "siteName": {
      "type": "string",
      "defaultValue": "ap-website"
    },
    "dbName": {
      "type": "string",
      "defaultValue": "ap-database"
    },
    "dbsku": {
      "type": "string",
      "allowedValues": [
        "GP_Gen5_2",
        "GP_Gen5_4",
        "GP_Gen5_8",
        "GP_Gen5_16",
        "GP_Gen5_32",
        "MO_Gen5_2",
        "MO_Gen5_4",
        "MO_Gen5_8",
        "MO_Gen5_16",
        "MO_Gen5_32"
      ],
      "metadata": {
        "description": "Azure database for mySQL sku name"
      },
      "defaultValue": "GP_Gen5_2"
    },
    "dbtier": {
      "type": "string",
      "allowedValues": [
        "GeneralPurpose",
        "MemoryOptimized"
      ],
      "metadata": {
        "description": "Azure database for mySQL pricing tier"
      },
      "defaultValue": "GeneralPurpose"
    },
    "dbcapacity": {
      "type": "int",
      "allowedValues": [
        2,
        4,
        8,
        16,
        32
      ],
      "defaultValue": 2
    },
    "dbskusize": {
      "type": "int",
      "allowedValues": [
        102400,
        51200
      ],
      "metadata": {
        "description": "Azure database for mySQL SKU size"
      },
      "defaultValue": 51200
    },
    "dbskufam": {
      "type": "string",
      "defaultValue": "Gen5"
    }
  },
  "functions": [],
  "variables": {
    "location": "eastus"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[parameters('serverName')]",
      "location": "[variables('location')]",
      "properties": {
        "name": "[parameters('hostingPlan')]",
        "workerSizeId": 1,
        "reserved": true,
        "numberOfWorkers": 1
      },
      "sku": {
        "Tier": "Standard",
        "Name": "S1"
      },
      "kind": "linux"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[parameters('siteName')]",
      "location": "[variables('location')]",
      "properties": {
        "siteConfig": {
          "linuxFxVersion": "php|7.0",
          "connectionStrings": [
            {
              "name": "defaultConnection",
              "ConnectionString": "[concat('Database=', parameters('dbName'), ';Data Source=', reference(resourceId('Microsoft.DBforMySQL/servers', parameters('serverName'))).fullyQualifiedDomainName, ';User Id=', parameters('adminLogin'), '@', parameters('serverName'), ';Password=', parameters('adminPassword'))]",
              "type": "mysql"
            }
          ]
        },
        "name": "[parameters('siteName')]",
        "serverFarmId": "[parameters('hostingPlan')]"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers",
      "apiVersion": "2017-12-01",
      "name": "[parameters('serverName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[parameters('dbsku')]",
        "tier": "[parameters('dbtier')]",
        "capacity": "[parameters('dbcapacity')]",
        "size": "[parameters('dbskusize')]",
        "family": "[parameters('dbskufam')]"
      }
    }
  ],
  "outputs": {}
}